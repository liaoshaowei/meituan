<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xugang.meituan.foodpackage.activity.FoodActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/llActionHead"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@mipmap/food_ic_actionbar_back"
                />
            <LinearLayout
                android:id="@+id/llSearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:layout_marginLeft="10dp"
                android:background="@drawable/food_editor_shape"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/food_ic_actionbar_search"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="输入商家名、品类和商圈"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/ivPosition"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/food_ic_actionbar_ic_map"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grayDeepDark"></View>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.xugang.meituan.foodpackage.widget.MyPtrPullToRefresh
            android:id="@+id/ptrflRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.xugang.meituan.foodpackage.widget.MyScrollView
                android:id="@+id/msv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:id="@+id/llNeedScroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="#f00"
                            >

                            <com.xugang.meituan.foodpackage.widget.MyViewpager
                                android:id="@+id/vpAd"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                            <RadioGroup
                                android:id="@+id/rgAd"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                >
                                <RadioButton
                                    android:id="@+id/rbAdOne"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:button="@null"
                                    android:background="@drawable/food_ad_rb_select"
                                    />
                                <RadioButton
                                    android:id="@+id/rbAdTwo"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:button="@null"
                                    android:background="@drawable/food_ad_rb_select"
                                    />
                            </RadioGroup>
                        </RelativeLayout>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvFoodType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </android.support.v7.widget.RecyclerView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/grayDark"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@color/grayMiddle"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/grayDark"/>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvActivity"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:paddingRight="10dp"
                            >
                        </android.support.v7.widget.RecyclerView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/grayDark"
                            >
                        </View>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@color/grayMiddle"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/grayDark"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llLeader"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        app:layout_collapseMode="pin"
                        >
                        <RelativeLayout
                            android:id="@+id/rlAll"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="10dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="全部"
                                />
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@mipmap/food_triangle"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                />
                        </RelativeLayout>
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/grayDark"
                            />

                        <RelativeLayout
                            android:id="@+id/rlNeighbor"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="10dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="附近"
                                />
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@mipmap/food_triangle"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                />
                        </RelativeLayout>
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/grayDark"
                            />
                        <RelativeLayout
                            android:id="@+id/rlRank"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="10dp"

                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="智能排序"
                                />
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@mipmap/food_triangle"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                />
                        </RelativeLayout>
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/grayDark"
                            />
                        <RelativeLayout
                            android:id="@+id/rlFiltrate"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="10dp"

                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="筛选"
                                />
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@mipmap/food_triangle"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                />
                        </RelativeLayout>
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/grayDark"
                            />
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvShop"
                        android:layout_width="match_parent"
                        android:layout_height="2000dp"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        ></android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </com.xugang.meituan.foodpackage.widget.MyScrollView>
        </com.xugang.meituan.foodpackage.widget.MyPtrPullToRefresh>
        <LinearLayout
            android:id="@+id/llHoldLeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                >
                <RelativeLayout
                    android:id="@+id/rlHoldAll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="全部"
                        />
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/food_triangle"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grayDark"
                    />
                <RelativeLayout
                    android:id="@+id/rlHoldNeighbor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="附近"
                        />
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/food_triangle"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grayDark"
                    />
                <RelativeLayout
                    android:id="@+id/rlHoldRank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="智能排序"
                        />
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/food_triangle"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grayDark"
                    />
                <RelativeLayout
                    android:id="@+id/rlHoldFiltrate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="筛选"
                        />
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/food_triangle"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grayDark"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grayDeepDark"></View>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>