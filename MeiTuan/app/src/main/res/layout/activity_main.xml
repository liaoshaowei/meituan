<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xugang.meituan.MainActivity">


    <View
        android:id="@+id/vTopExtra"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/toobar_color" />

    <FrameLayout
        android:id="@+id/flMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F2F4F1"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <RadioButton
            android:id="@+id/rbFirstPage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/select_menuj__first_page"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/mine_text_on"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rbFujing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/select_menuj__fujing"
            android:gravity="center"
            android:text="附近"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rbMine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/select_menuj__mine"
            android:gravity="center"
            android:text="我的"
            android:textSize="12sp" />

    </RadioGroup>

</LinearLayout>

