                android:layout_width="@dimen/main_pic_size"
                android:layout_height="@dimen/main_pic_size"
                android:background="@mipmap/ic_category_2" />

            <TextView
                style="@style/MainPicTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="酒店住宿" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/main_pic_size"
                android:layout_height="@dimen/main_pic_size"
                android:background="@mipmap/ic_category_29" />

            <TextView
                style="@style/MainPicTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
